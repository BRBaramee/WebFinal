@model ProjectWebFinal.Models.Manager


@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

    <div class="container">
        <div class="row align-items-center vh-100">
            <div class="col-6 mx-auto">
                <div class="row">
                    <div class="col"></div>
                    <div class="col text-center">
                        <div class="card text-center" style="width: 20rem;">
                            <img src="https://canalc.com.ar/wp-content/uploads/2018/03/cropped-portada-1024x614.jpg"
                                class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title my-3">จัดการข้อมูลภาพยนตร์</h5>
                                <form method="post" asp-action="Login">
                                    <div class="form-group-lgp mb-3">
                                        <input asp-for="Email" type="email" class="form-control input-lg mb-1" placeholder="อีเมล (email)" required>
                                        <span class="text-danger">@TempData["errorEmail"]</span>
                                    </div>
                                    <div class="form-group-lg mb-3">
                                        <input asp-for="Password" type="password" class="form-control input-lg mb-1" placeholder="รหัสผ่าน (password)" required>
                                        <span class="text-danger">@TempData["errorPass"]</span>
                                    </div>
                                    <div class="form-group-lg mb-2">
                                        <input type="submit" class="btn btn-primary" value="ล็อกอิน"/>
                                    </div>
                                </form>
                            </div>
                            <p>เป็นสมาชิกเพื่อจัดการ &nbsp;<a class="text-primary mb-3" asp-action="Register" asp-controller="Account">สมัครสมาชิก</a></p>
                        
                        </div>
                    </div>
                    <div class="col"></div>
                </div>

            </div>
        </div>
    </div>


