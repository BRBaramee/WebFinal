@model ProjectWebFinal.Models.Manager

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Movie.cshtml";
}

<div class="row align-items-center mt-5">
    <div class="col-6 mx-auto">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <div class="card boder rounded" style="width: 28rem;">
                    <div class="card-body ">
                        <div class="text-left h3">
                            <a asp-action="Index"><i class="fa-solid fa-arrow-left-long"></i></a>
                        </div>
                        <form class="text-center" asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <h5 class="card-title my-3">แก้ไขข้อมูลสมาชิก</h5>
                            <div class="row">
                                <div class="col">
                                    <div class="mb-3">
                                        <input type="text" asp-for="FirstName" class="form-control"
                                            placeholder="ชื่อ (FirstName)" required>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="mb-3">
                                        <input type="text" asp-for="LastName" class="form-control"
                                            placeholder="นามสกุล (LastName)" required>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="email" asp-for="Email" class="form-control" placeholder="อีเมล (email)" readonly>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Password" class="form-control"
                                    placeholder="รหัสผ่าน (password)" readonly>
                            </div>
                            <input type="submit" class="btn btn-primary" value="อัพเดต" />
                        </form>
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}