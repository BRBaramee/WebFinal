@model ProjectWebApiFinal.Models.Movie

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Movie.cshtml";
}
<style>
    input::placeholder {
    color: white;
}
</style>
<form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row align-items-center h-100 mt-5">
            <div class="col-6 mx-auto">
                <div class="row">
                    <div class="col"></div>
                    <div class="col">
                        <div class="card" style="width: 40rem;">
                            <img id="Poster" src="https://pbs.twimg.com/media/FhIp_YJXgAEG6pF?format=jpg&name=large"
                                class="card-img-top">

                            <div
                                class="card-body d-flex flex-column text-start align-items-start justify-content-center" style="background-color: #031D43;">
                                <div class="row text-end">
                                </div>  
                                <h5 class="card-title mb-4 text-white">เพิ่มรายละเอียดภาพยนต์</h5>
                                
                                    <div class="row">
                                        <div class="mb-3">
                                            <input asp-for="Title" type="text" class="form-control text-white" style="background-color: #052C65;" placeholder="ชื่อเรื่อง (Title)"
                                                required>
                                        </div>
                                        <div class="mb-3">
                                            <input asp-for="Year" type="text" class="form-control text-white" style="background-color: #052C65;"
                                                placeholder="ปีที่ฉาย (Year of show)" required>
                                        </div>
                                        <div class="mb-3">
                                            
                                            <input type="file" asp-for="Poster" class="form-control text-white mb-1" style="background-color: #052C65;" name="formFile"
                                                accept=".png,.jpg,.jpeg,.gif,.tif"  placeholder="เลือกรูปภาพ (Choose Image)"
                                                onchange="document.getElementById('Poster').src = window.URL.createObjectURL(this.files[0])" />
                                                <span class="text-danger">@TempData["imgError"]</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <a asp-action="Index" class="btn btn-danger form-control">ยกเลิก</a>
                                        </div>
                                        <div class="col">
                                            <input type="submit" class="btn btn-primary form-control" value="บันทึก">
                                        </div>
                                    </div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col"></div>
                </div>

            </div>
        </div>
    </form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
