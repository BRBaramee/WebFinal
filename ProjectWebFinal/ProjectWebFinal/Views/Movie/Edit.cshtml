@model ProjectWebApiFinal.Models.Movie

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout_Movie.cshtml";
}



<style>
       
        .card {
            flex-direction: row;
        }

        .card img {
            height: 400px;
            width: 270px;
        }
</style>
        <div class="row align-items-center h-100 mt-5">
            <div class="col-6 mx-auto">
                <div class="row">
                    <div class="col"></div>
                    <div class="col">
                        <div class="card" style="width: 40rem;">
                            <img src="@Url.Content(Model.Poster)" width="270" height="400" class="card-img-top" id="Poster"/>
                            <div
                                class="card-body d-flex flex-column text-start align-items-start justify-content-center" style="background-color: #031D43;">
                                <div class="row text-end">
                                </div>  
                                <div></div>
                                <h5 class="card-title mb-4 text-white">เเก้ไขรายละเอียดภาพยนต์</h5>
                                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                                    <div class="row">
                            
                                        <div class="mb-3">
                     
                                            <input asp-for="Title" class="form-control text-white" style="background-color: #052C65;" />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">

                                            <input asp-for="Year" class="form-control text-white" style="background-color: #052C65;" />
                                            <span asp-validation-for="Year" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">

                                           <input type="file" asp-for="Poster" class="form-control text-white mb-1" style="background-color: #052C65;" name="file"
                                            accept=".png,.jpg,.jpeg,.gif,.tif"  placeholder="เลือกรูปภาพ (Choose Image)" value="@Url.Content(Model.Poster)"
                                            onchange="document.getElementById('Poster').src = window.URL.createObjectURL(this.files[0])" />
                                            <span class="text-danger">@TempData["imgError"]</span>
                                        </div>
                                        
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <a type="submit" class="btn btn-danger form-control" asp-action="Index"> ยกเลิก</a>
                                            
                                        </div>
                                       
                                        <div class="col">
                                            <input type="submit" class="btn btn-primary form-control" value="บันทึก">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col"></div>
                </div>

            </div>
        </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
